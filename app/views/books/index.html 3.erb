 <div class="container">
  <div class="row">

    <% if @book.errors.any? %>
 <div id="error_explanation">
    <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

    <div class="col-xs-3">

 <%= render 'users/user_info', user_id: @user_id %>

<%= render 'users/new_book', book: @book %>
 
</div>

<div class="col-xs-9">
 <h1>Books</h1>

<table class="table table-hover">
   	<thead>
   	<tr>
   	  <th><p></p></th>
      <th><p>Title</p></th>
      <th><p>Opinion</p></th>
    </tr>
    </thead>
<% @books.each do |book| %>
    <tbody>
    <tr>
     <td>
      <%=link_to show_user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg",size:'50x50' %>
      <% end %>
      </td>
      <td><span>

      	<%=link_to book.title, book_path(book.id)  %>
      		
      	</span></td>
      <td><span><%= book.body %></span></td>
    </tr>
    </tbody>
    <% end %>
  </table>
  <p class="text-right">CopyRight Infratop.inc</p>
</div>